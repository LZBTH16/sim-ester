<div class="register">
    <form class="register-form" action="/customerEdit" method="POST">
        <h1>Edit Your Profile</h1>

        <div class="register-group">
            <label>
                <input type="text" id="firstName" name="firstName" placeholder=" " size=15 maxlength="15">
                <span>First name</span>
            </label>
            <label>
                <input type="text" id="lastName" name="lastName" placeholder=" " size=15 maxlength="15">
                <span>Last name</span>
            </label>
        </div>

        <label>
            <input type="email" id="email" name="email" placeholder=" " size=40 maxlength="40">
            <span>Email</span>
        </label>

        <label>
            <input type="tel" id="phone" name="phone" placeholder=" " size=40 maxlength="40">
            <span>Phone number</span>
        </label>

        <label>
            <input type="text" id="address" name="address" placeholder=" " size=40 maxlength="40">
            <span>Street address</span>
        </label>

        <div class="register-group">
            <label>
                <input type="text" id="city" name="city" placeholder=" " size=15 maxlength="15">
                <span>City</span>
            </label>
            <label>
                <input type="text" id="state" name="state" placeholder=" " size=15 maxlength="15">
                <span>State</span>
            </label>
        </div>

        <div class="register-group">
            <label>
                <input type="text" id="postalCode" name="postalCode" placeholder=" " size=15 maxlength="15">
                <span>Postal Code</span>
            </label>
            <label>
                <input type="text" id="country" name="country" placeholder=" " size=15 maxlength="15">
                <span>Country</span>
            </label>
        </div>

        <label>
            <input type="password" id="password" name="password" placeholder=" " size=40 maxlength="40">
            <span>Password</span>
        </label>

        {{!-- submit button to confirm changes --}}
        <div class="register-button">
            <input class="custom-button" type="submit" value="Confirm">
        </div>
    </form>
</div>