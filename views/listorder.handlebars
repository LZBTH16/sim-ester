<div class="listorder">
    <div class="listorder-title">
        <h1>SIM-ESTER Order List</h1>
    </div>

    <div class="order-container">
        {{#each orders}}
            <div class="order-details">
                <h2>Order ID: {{this.order_id}}</h2>
                <p><strong>Order Date:</strong> {{this.orderDate}}</p>
                <p><strong>Customer ID:</strong> {{this.customerId}}</p>
                <p><strong>Customer Name:</strong> {{this.customerName}}</p>
                <p><strong>Total Amount:</strong> ${{this.totalAmount}}</p>

                <table>
                    <thead>
                        <tr>
                            <th>Product ID</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each this.products}}
                            <tr>
                                <td>{{this.productId}}</td>
                                <td>{{this.quantity}}</td>
                                <td>{{this.price}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{/each}}

        {{#unless orders}}
            <p>No orders found.</p>
        {{/unless}}
    </div>    
</div>
