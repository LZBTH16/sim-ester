<div class="your-cart">
    <div class="show-cart">
        {{#if productList}}
            <h1>Your Shopping Cart</h1>
            <div class="show-cart-table">
                <table>
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <th>Actions</th>
                    </tr>

                    {{#each productList}}
                        {{#if this}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.name}}</td>
                                <td align="center">
                                    <input class="qty" type="number" id="{{this.id}}" value="{{this.quantity}}" min="1">
                                    <button class="updateitem" onclick="updateQuantity({{this.id}})">Update</button>
                                </td>
                                <td align="right">${{formatPrice this.price}}</td>
                                <td align="right">${{multiply this.quantity this.price}}</td>
                                <td class="removeitem">
                                    <a href="/delete-item?id={{this.id}}">Remove from cart</a>
                                </td>
                            </tr>
                        {{/if}}
                    {{/each}}

                    <tr class="total">
                        <td colspan="4" align="right"><b>Order Total</b></td>
                        <td align="right">${{formatPrice total}}</td>
                    </tr>
                </table>
            </div>

            <div class="navigate-button">
                <p class="navigate"><a href="/checkout">Check Out</a></p>
                <p class="navigate"><a href="/list-prod">Continue Shopping</a></p>
            </div>
        {{else}}
                <h2>Your cart is empty!</h2>
                <p class="navigate"><a href="/list-prod">Continue Shopping</a></p>
        {{/if}}
    </div>
</div>

<script>
    function updateQuantity(id) {
        let quantity = document.getElementById(id).value;
        if (quantity < 1 || quantity > 100) {
            alert("Please enter a quantity between 1 and 100.");
            return;
        }
        window.location.href = `update-quantity?id=${id}&quantity=${quantity}`;
    }
</script>