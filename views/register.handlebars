<div class="register">
    <form class="register-form" action="/validateRegister" method="POST">
        <h1>Register</h1>
        <p>Sign up now to get full access to all features</p>

        <div class="register-group">
            <label>
                <input type="text" id="firstName" name="firstName" placeholder=" " size=15 maxlength="15" required>
                <span>First name</span>
            </label>
            <label>
                <input type="text" id="lastName" name="lastName" placeholder=" " size=15 maxlength="15" required>
                <span>Last name</span>
            </label>
        </div>

        <label>
            <input type="email" id="email" name="email" placeholder=" " size=40 maxlength="40" required>
            <span>Email</span>
        </label>

        <label>
            <input type="tel" id="phone" name="phone" placeholder=" " size=40 maxlength="15" required>
            <span>Phone number</span>
        </label>

        <label>
            <input type="text" id="address" name="address" placeholder=" " size=40 maxlength="40" required>
            <span>Street address</span>
        </label>

        <div class="register-group">
            <label>
                <input type="text" id="city" name="city" placeholder=" " size=15 maxlength="15" required>
                <span>City</span>
            </label>
            <label>
                <input type="text" id="state" name="state" placeholder=" " size=15 maxlength="15" required>
                <span>State</span>
            </label>
        </div>
        
        <div class="register-group">
            <label>
                <input type="text" id="postalCode" name="postalCode" placeholder=" " size=15 maxlength="15" minlength="6" required>
                <span>Postal Code</span>
            </label>
            <label>
                <input type="text" id="country" name="country" placeholder=" " size=15 maxlength="15" required>
                <span>Country</span>
            </label>
        </div>

        <label>
            <input type="text" id="username" name="username" placeholder=" " size=40 maxlength="40" required>
            <span>Username</span>
        </label>

        <label>
            <input type="password" id="password" name="password" placeholder=" " size=40 maxlength="40" required>
            <span>Password</span>
        </label>

        <!-- Submit Button -->
        <div class="register-button">
            <input class="custom-button" type="submit" value="Register">
        </div>
        {{!-- to sign in instead --}}
        <p>Already have an account? <a href="/login">Login</a></p>
    </form>
</div>