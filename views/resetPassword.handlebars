<link rel="stylesheet" href="../../css/style.css">
<link rel="stylesheet" href="../../css/components.css">
<link rel="stylesheet" href="../../css/partials.css">

<div class="reset-page">
        <form class="reset-form" method="POST" action="/forgotPassword/reset-password/{{token}}">
            <h2>Enter your new password:</h2>
            <label>
                <input type="password" id="newPassword" name="newPassword" placeholder=" " size="50" maxlength="50" required>
                <span>New Password</span>
            </label>

            <div class="form-button">
                <span><input class="custom-button" type="submit" value="Reset Password"></span>
            </div>
        </form>
</div>