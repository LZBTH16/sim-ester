<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="css/style.css"> <!-- linking to the CSS -->
        <title>{{title}}</title>
    </head>

    <body>
    
    <div class="listprod">
        {{!-- <div class="listprod-search"> --}}
            <h1>Search for Products</h1>

            <!-- product search bar & buttons -->
            <form method="get" action="/listprod">
                <input class="searchbar" type="text" name="productName" size="30" placeholder="Enter product name">
                <input class="custom-button" type="submit" value="Submit">
                <input class="custom-button" type="reset" value="Reset">
            </form>
        {{!-- </div> --}}

        <!-- List of Products -->
        <div class="listprod-table">
            <table>
                <tr>
                    <th></th>
                    <th>Product Name</th>
                    <th>Price</th>
                </tr>
                <!-- getting the results -->
                {{#each products}}
                    <tr>
                        <td class="add-cart"><a href="addcart?id={{id}}&name={{name}}&price={{price}}">Add to cart</a></td>
                        <td class="listprod-product"><a href="product?id={{id}}" >{{name}}</a></td>
                        <td>${{price}}</td>
                    </tr>
                {{/each}}
            </table>
        </div>
    </div>

    </body>
</html>