<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="css/style.css"> <!-- linking to the CSS -->
        <title>{{title}}</title>
    </head>

    <body>
    
    <div class="listprod">
        <div class="listprod-search">
            <h1>Search for Products</h1>

            <!-- product search bar & buttons -->
            <form method="get" action="/listprod" class="search-form">
                {{!-- category filter --}}
                <select class="category-select" name="category">
                    <option value="">Category</option>
                    <option value="COSC">COSC</option>
                    <option value="MATH">MATH</option>
                    <option value="STAT">STAT</option>
                </select>
                {{!-- search for... --}}
                <input class="text-input" type="text" name="productName" size="30" placeholder="Enter product name">
                <input class="custom-button" type="submit" value="Submit">
                <input class="custom-button" type="reset" value="Reset">
            </form>
        </div>

        {{!-- The products --}}
        <div class="products-container">
            {{#each products}}
            <div class="product-card">
                <div class="product-name">
                    <a href="product?id={{id}}" >{{name}}</a>
                </div>
                <div class="product-price">
                    ${{price}}
                </div>
                <div class="product-action">
                    <a href="addcart?id={{id}}&name={{name}}&price={{price}}">Add to cart</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    </body>
</html>