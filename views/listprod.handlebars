<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="css/style.css"> <!-- linking to the CSS -->
        <title>{{title}}</title>
    </head>

    <body>
    
    <div class="listprod-search">
        <h1>Search for Products You Want to Buy:</h1>

        <!-- product search bar & buttons -->
        <form method="get" action="/listprod">
            <input type="text" name="productName" size="50" placeholder="Enter product name">
            <input type="submit" value="Submit">
            <input type="reset" value="Reset">
        </form>
    </div>

    <!-- List of Products -->
    <div class="listprod">
        <table>
            <tr>
                <th></th>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
            <!-- getting the results -->
            {{#each products}}
                <tr class="products">
                    <th class="cart"><a href="addcart?id={{id}}&name={{name}}&price={{price}}">Add to cart</a></th>
                    <th class="product"><a href="product?id={{id}}" >{{name}}</a></th>
                    <th>{{price}}</th>
                </tr>
            {{/each}}
        </table>
    </div>

    </body>
</html>