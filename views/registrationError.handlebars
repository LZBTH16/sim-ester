<div class="customer">
    <div class="customer-account">
        <h1>Registration Error</h1>

        {{#if emailInUse}}
            <p>The email address you provided is already in use. Please use a different email address.</p>
        {{/if}}

        {{#if usernameInUse}}
            <p>The username you selected is already in use. Please choose a different username.</p>
        {{/if}}

        {{#if invalidPhoneNumber}}
            <p>The phone number you entered is invalid. Please enter a valid phone number.</p>
        {{/if}}

        {{#if invalidEmail}}
            <p>The email you entered is invalid. Please enter a valid email.</p>
        {{/if}}

        {{!-- Provide a link to go back to the registration form --}}
        <p class="navigate"><a href="/register">Go back to the registration page</a></p>
    </div>
</div>
