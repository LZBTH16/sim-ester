<div class="wishlist">
    <div class="container">
        <h2>Wishlist</h2>

        {{#if message}}
            <p>{{message}}</p>
        {{else}}
            {{#if emptyWishlist}}
                <p>Your wishlist is empty.</p>
            {{else}}
                <table>
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Added Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                            <tr>
                                <td>{{this.productName}}</td>
                                <td>${{this.productPrice}}</td>
                                <td>{{this.addedDate}}</td>
                                <td class="removeitem">
                                    <a href="/wishlist/remove?productId={{this.productId}}">Remove</a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{/if}}
        {{/if}}

        <!-- Button to create a wishlist -->
        {{#if noWishlist}}
            <form action="/wishlist/create" method="POST">
                <button type="submit">Create Wishlist</button>
            </form>
        {{/if}}
    </div>    
</div>